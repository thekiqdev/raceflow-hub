# PostgreSQL Database Configuration
POSTGRES_USER=raceflow_user
POSTGRES_PASSWORD=raceflow_password
POSTGRES_DB=raceflow_db
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Database Connection String (for backend)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# JWT Secret (for authentication - generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Backend API Configuration
API_PORT=3001
API_URL=http://localhost:${API_PORT}
NODE_ENV=development

# Frontend Configuration (if needed)
VITE_API_URL=http://localhost:${API_PORT}/api

# CORS Configuration
CORS_ORIGIN=http://localhost:5173





